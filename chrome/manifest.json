{
  "name": "Get pages source",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Get pages source from a popup",
  "browser_action": {
    "default_icon": "jcp.png",
    "default_popup": "t.html"
  },
  "chrome_url_overrides" : {
    "newtab": "tab.html"
  },
  "background": {
      "scripts":["jquery-3.1.0.js"]
  },
    "icons":{
    "64" : "jcp.png",
    "32" : "jcp.png",
    "16" : "jcp.png",
    "128" : "jcp.png"
  },
  "content_scripts":[
      {
          "matches": ["http://*/*", "https://*/*","http://jquery.com/*"],
          // "css":["bs/css/bootstrap.min.css"],
          "js": ["jquery-3.1.0.js","t.js"]
      }
  ],
 
  "permissions": ["tabs", "<all_urls>","http://www.google.com/*",
          "http://*/*",
          "https://*/*",
          "background",
          "webRequest",
          "activeTab"]
}